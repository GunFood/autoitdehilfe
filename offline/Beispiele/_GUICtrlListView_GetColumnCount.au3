	GUISetState(@SW_SHOW)

	MsgBox($MB_SYSTEMMODAL, "Information", "Anzahl der Spalten: " & _GUICtrlListView_GetColumnCount($idListView))

	; Die Schleife wiederholt sich, bis der Benutzer die Beenden-Aktion der GUI auslÃ¶st
